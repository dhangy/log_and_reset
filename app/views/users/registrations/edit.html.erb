<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <f.label :beverage_feature %>Beverage Log<br />
    <%= f.check_box :beverage_feature %>
  </div>

  <div class="field">
    <f.label :food_feature %>Food Log<br />
    <%= f.check_box :food_feature %>
  </div>

  <div class="field">
    <f.label :cycle_feature %>Hormone Cycle Log<br />
    <%= f.check_box :cycle_feature %> 
  </div>

  <div class="field">
    <f.label :exercise_feature %>Exercise and Fitness Log<br />
    <%= f.check_box :exercise_feature %>
  </div>

  <div class="field">
    <f.label :mental_health_feature %>Mental Health and Mood Log<br />
    <%= f.check_box :mental_health_feature %>
  </div>

  <div class="field">
    <f.label :sleep_feature %>Sleep Log<br />
    <%= f.check_box :sleep_feature %>
  </div>

  <div class="field">
    <f.label :pain_level_feature %>Pain Log<br />
    <%= f.check_box :pain_level_feature %>
  </div>

  <div class="field">
    <f.label :relationship_feature %>Interpersonal Relationships Log<br />
    <%= f.check_box :relationship_feature %>
  </div>

  <div class="field">
    <%= f.label :media_feature %>Media Consumption Log<br />
    <%= f.check_box :media_feature %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
